<view class="container">
  <view class="result-image-section">
    <view class="image-wrapper">
      <image wx:if="{{tempFilePath}}" class="result-image" src="{{tempFilePath}}" mode="aspectFit"></image>
      <view wx:else class="placeholder flex-center">
        <text>加载中...</text>
      </view>
    </view>
  </view>

  <view class="frames-section card">
    <view class="section-title">新疆特色头像框</view>
    <scroll-view class="frames-scroll" scroll-x="true">
      <view class="frames-list">
        <view 
          wx:for="{{frames}}" 
          wx:key="id"
          class="frame-item {{selectedFrame === item.path ? 'active' : ''}}"
          data-frame="{{item.path}}"
          bindtap="selectFrame"
        >
          <image class="frame-icon" src="{{item.path}}"></image>
          <text class="frame-name">{{item.name}}</text>
        </view>
      </view>
    </scroll-view>
  </view>

  <view class="action-buttons">
    <button class="action-btn btn-secondary" bindtap="regenerate">重新生成</button>
    <button class="action-btn btn-secondary" bindtap="shareImage">分享</button>
    <button class="action-btn btn-primary" bindtap="saveImage">保存到相册</button>
  </view>

  <view class="tips-section">
    <text class="tips-text">· AI生成内容仅供参考</text>
  </view>
</view>
