<view class="container">
  <!-- 头部积分卡片 -->
  <view class="header-section">
    <view class="points-card">
      <view class="points-top">
        <view class="points-info">
          <text class="points-label">我的积分</text>
          <view class="points-row">
            <text class="points-value">{{points}}</text>
            <view class="points-btn" bindtap="goToPoints">
              <text class="points-btn-text">+</text>
            </view>
          </view>
        </view>
        <image class="header-decoration" src="/images/header-decoration.png"></image>
      </view>
      <view class="points-bottom">
        <view class="points-item" bindtap="goToPoints">
          <image class="points-item-icon" src="/images/icons/sign.png"></image>
          <text class="points-item-text">每日签到</text>
        </view>
        <view class="points-item" bindtap="watchAd">
          <image class="points-item-icon" src="/images/icons/ad.png"></image>
          <text class="points-item-text">看广告领积分</text>
        </view>
        <view class="points-item" bindtap="goToInvite">
          <image class="points-item-icon" src="/images/icons/invite.png"></image>
          <text class="points-item-text">邀请好友</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 上传区域 -->
  <view class="section-card">
    <view class="section-header">
      <text class="section-title">上传照片</text>
      <text class="section-tips">支持自拍或相册</text>
    </view>
    <view class="upload-area" bindtap="chooseImage">
      <image wx:if="{{selectedImage}}" class="preview-image" src="{{selectedImage}}" mode="aspectFill"></image>
      <view wx:else class="upload-placeholder">
        <view class="upload-icon-wrapper">
          <image class="upload-icon" src="/images/icons/upload.png"></image>
        </view>
        <text class="upload-text">点击选择照片</text>
        <text class="upload-tips">支持jpg、png格式</text>
      </view>
    </view>
  </view>

  <!-- 热门头像框 -->
  <view class="section-card">
    <view class="section-header">
      <text class="section-title">热门头像框</text>
      <text class="section-more" bindtap="goToFrames">更多 ></text>
    </view>
    <scroll-view class="hot-scroll" scroll-x="true" enhanced show-scrollbar="{{false}}">
      <view class="hot-list">
        <view 
          wx:for="{{hotFrames}}" 
          wx:key="id"
          class="hot-item {{selectedFrame === item.id ? 'active' : ''}}"
          data-id="{{item.id}}"
          bindtap="selectFrame"
        >
          <image class="hot-image" src="{{item.image}}"></image>
          <text class="hot-name">{{item.name}}</text>
        </view>
      </view>
    </scroll-view>
  </view>

  <!-- 热门贴纸 -->
  <view class="section-card">
    <view class="section-header">
      <text class="section-title">热门贴纸</text>
      <text class="section-more" bindtap="goToStickers">更多 ></text>
    </view>
    <scroll-view class="hot-scroll" scroll-x="true" enhanced show-scrollbar="{{false}}">
      <view class="hot-list">
        <view 
          wx:for="{{hotStickers}}" 
          wx:key="id"
          class="hot-item {{selectedSticker === item.id ? 'active' : ''}}"
          data-id="{{item.id}}"
          bindtap="selectSticker"
        >
          <image class="hot-image" src="{{item.image}}"></image>
          <text class="hot-name">{{item.name}}</text>
        </view>
      </view>
    </scroll-view>
  </view>

  <!-- 选择风格 -->
  <view class="section-card">
    <view class="section-header">
      <text class="section-title">生成风格</text>
      <text class="section-tips">AI智能生成</text>
    </view>
    <scroll-view class="style-scroll" scroll-x="true" enhanced show-scrollbar="{{false}}">
      <view class="style-list">
        <view 
          wx:for="{{styles}}" 
          wx:key="key"
          class="style-item {{selectedStyle === item.key ? 'active' : ''}}"
          data-style="{{item.key}}"
          bindtap="selectStyle"
        >
          <image class="style-icon" src="{{item.icon}}"></image>
          <text class="style-name">{{item.name}}</text>
          <text wx:if="{{item.hot}}" class="style-hot">HOT</text>
        </view>
      </view>
    </scroll-view>
  </view>

  <!-- 生成按钮 -->
  <view class="action-section">
    <button 
      class="generate-btn" 
      bindtap="generateAvatar"
      disabled="{{isGenerating || !selectedImage}}"
    >
      <text wx:if="{{isGenerating}}" class="btn-loading">生成中...</text>
      <text wx:else>立即生成 AI头像</text>
      <text class="btn-points">消耗10积分</text>
    </button>
    <button class="generate-btn btn-secondary" bindtap="goToBianbian">
      <text>百变头像</text>
      <text class="btn-sub">动漫风格</text>
    </button>
  </view>

  <!-- 提示信息 -->
  <view class="tips-section">
    <view class="tips-item">
      <text class="tips-icon">✓</text>
      <text class="tips-text">AI智能生成，效果自然</text>
    </view>
    <view class="tips-item">
      <text class="tips-icon">✓</text>
      <text class="tips-text">支持多种风格选择</text>
    </view>
    <view class="tips-item">
      <text class="tips-icon">✓</text>
      <text class="tips-text">生成内容仅供参考</text>
    </view>
  </view>
</view>
