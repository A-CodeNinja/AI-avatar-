<view class="container">
  <view class="points-card card">
    <view class="flex-between">
      <text class="points-label">我的积分</text>
      <text class="points-value">{{points}}</text>
    </view>
  </view>

  <view class="upload-section card">
    <view class="upload-area" bindtap="chooseImage">
      <image wx:if="{{selectedImage}}" class="preview-image" src="{{selectedImage}}" mode="aspectFill"></image>
      <view wx:else class="upload-placeholder flex-center">
        <image class="upload-icon" src="/images/icons/avatar.png"></image>
        <text class="upload-text">点击上传照片</text>
      </view>
    </view>
  </view>

  <view class="style-section card">
    <view class="section-title">选择风格</view>
    <scroll-view class="style-scroll" scroll-x="true">
      <view class="style-list">
        <view 
          wx:for="{{styles}}" 
          wx:key="key"
          class="style-item {{selectedStyle === item.key ? 'active' : ''}}"
          data-style="{{item.key}}"
          bindtap="selectStyle"
        >
          <image class="style-icon" src="{{item.icon}}"></image>
          <text class="style-name">{{item.name}}</text>
        </view>
      </view>
    </scroll-view>
  </view>

  <button 
    class="generate-btn btn-primary" 
    bindtap="generateAvatar"
    disabled="{{isGenerating || !selectedImage}}"
  >
    {{isGenerating ? '生成中...' : '立即生成 (10积分)'}}
  </button>

  <view class="tips-section">
    <text class="tips-text">· AI生成内容仅供参考</text>
  </view>
</view>
