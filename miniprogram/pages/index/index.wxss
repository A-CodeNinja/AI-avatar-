.container {
  padding: 30rpx;
}

.points-card {
  background: linear-gradient(135deg, #6C63FF 0%, #8B7FFF 100%);
  color: white;
  margin-bottom: 30rpx;
}

.points-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.points-value {
  font-size: 48rpx;
  font-weight: bold;
}

.upload-section {
  margin-bottom: 30rpx;
}

.upload-area {
  width: 100%;
  height: 500rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background-color: #F5F5F5;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  flex-direction: column;
  height: 100%;
}

.upload-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
  margin-bottom: 20rpx;
}

.upload-text {
  color: #999999;
  font-size: 28rpx;
}

.style-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.style-scroll {
  white-space: nowrap;
}

.style-list {
  display: flex;
}

.style-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  background-color: #F8F9FA;
  min-width: 140rpx;
}

.style-item.active {
  background: linear-gradient(135deg, #6C63FF 0%, #8B7FFF 100%);
}

.style-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
}

.style-name {
  font-size: 24rpx;
  color: #666666;
}

.style-item.active .style-name {
  color: white;
}

.generate-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.generate-btn[disabled] {
  opacity: 0.6;
}

.tips-section {
  text-align: center;
}

.tips-text {
  font-size: 24rpx;
  color: #999999;
}
