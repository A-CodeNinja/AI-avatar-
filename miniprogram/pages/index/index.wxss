.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F5F7FA 0%, #FFFFFF 100%);
  padding-bottom: 40rpx;
}

/* 头部积分卡片 */
.header-section {
  padding: 20rpx 30rpx;
}

.points-card {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

.points-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 70%);
  border-radius: 50%;
}

.points-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.points-info {
  flex: 1;
}

.points-label {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}

.points-row {
  display: flex;
  align-items: center;
}

.points-value {
  font-size: 56rpx;
  font-weight: bold;
  color: #FFFFFF;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.points-btn {
  width: 56rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.points-btn-text {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: 300;
}

.header-decoration {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.3;
}

.points-bottom {
  display: flex;
  justify-content: space-around;
}

.points-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.points-item-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 8rpx;
}

.points-item-text {
  font-size: 22rpx;
  color: #FFFFFF;
}

/* 通用卡片 */
.section-card {
  background: #FFFFFF;
  margin: 0 30rpx 24rpx;
  padding: 28rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.section-tips {
  font-size: 22rpx;
  color: #999999;
}

.section-more {
  font-size: 24rpx;
  color: #667EEA;
}

/* 上传区域 */
.upload-area {
  width: 100%;
  height: 520rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #F8F9FA 0%, #F0F2F5 100%);
  border: 3rpx dashed #E0E0E0;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.upload-area::active {
  border-color: #667EEA;
  background: linear-gradient(135deg, #F0F4FF 0%, #E8EEFF 100%);
}

.preview-image {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon-wrapper {
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.upload-icon {
  width: 70rpx;
  height: 70rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.upload-tips {
  font-size: 22rpx;
  color: #999999;
}

/* 上传区域 - 适配emoji */
.upload-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

/* 民族风格滚动（新增） */
.ethnic-scroll {
  width: 100%;
}

.ethnic-list {
  display: flex;
  padding-right: 10rpx;
}

.ethnic-item {
  flex-shrink: 0;
  margin-right: 20rpx;
  width: 180rpx;
  padding: 20rpx 16rpx;
  border-radius: 20rpx;
  background: #F8F9FA;
  border: 3rpx solid transparent;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
}

.ethnic-item.active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.4);
}

.ethnic-item::active {
  transform: scale(0.95);
}

.ethnic-icon {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-bottom: 12rpx;
  color: white;
}

.ethnic-name {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
  text-align: center;
}

.ethnic-item.active .ethnic-name {
  color: #FFFFFF;
}

/* 热门横向滚动 */
.hot-scroll {
  width: 100%;
}

.hot-list {
  display: flex;
  padding-right: 10rpx;
}

.hot-item {
  flex-shrink: 0;
  margin-right: 20rpx;
  width: 160rpx;
  padding: 16rpx;
  border-radius: 16rpx;
  background: #F8F9FA;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.hot-item.active {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  border-color: #667EEA;
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.4);
}

.hot-item::active {
  transform: scale(0.95);
}

.hot-image {
  width: 128rpx;
  height: 128rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  background: #E0E0E0;
}

.hot-name {
  display: block;
  font-size: 22rpx;
  color: #666666;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.hot-item.active .hot-name {
  color: #FFFFFF;
}

/* 风格选择 */
.style-scroll {
  width: 100%;
}

.style-list {
  display: flex;
  padding-right: 10rpx;
}

.style-item {
  flex-shrink: 0;
  margin-right: 20rpx;
  width: 150rpx;
  padding: 20rpx 16rpx;
  border-radius: 20rpx;
  background: #F8F9FA;
  border: 2rpx solid #E8E8E8;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  transition: all 0.3s ease;
}

.style-item.active {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  border-color: #667EEA;
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.4);
}

.style-item::active {
  transform: scale(0.95);
}

.style-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  background: #E0E0E0;
}

.style-name {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
}

.style-item.active .style-name {
  color: #FFFFFF;
}

.style-hot {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #FFFFFF;
  font-size: 16rpx;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  font-weight: bold;
}

/* 操作按钮区域 */
.action-section {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.generate-btn {
  width: 100%;
  height: 110rpx;
  border-radius: 60rpx;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: #FFFFFF;
  font-size: 34rpx;
  font-weight: bold;
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  margin-bottom: 20rpx;
  line-height: normal;
}

.generate-btn::after {
  border: none;
}

.generate-btn::active {
  transform: scale(0.98);
}

.generate-btn[disabled] {
  opacity: 0.5;
  box-shadow: none;
}

.btn-loading {
  animation: loading 1.5s ease-in-out infinite;
}

@keyframes loading {
  0%, 100% { opacity: 0.6; }
  50% { opacity: 1; }
}

.btn-points {
  font-size: 22rpx;
  opacity: 0.85;
  font-weight: normal;
  margin-top: 4rpx;
}

.btn-sub {
  font-size: 24rpx;
  opacity: 0.9;
  font-weight: normal;
  margin-top: 4rpx;
}

.btn-secondary {
  background: linear-gradient(135deg, #FFA751 0%, #FFE259 100%);
  box-shadow: 0 8rpx 24rpx rgba(255, 167, 81, 0.4);
}

/* 提示区域 */
.tips-section {
  margin: 0 30rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #FFF5F5 0%, #FFF 100%);
  border-radius: 16rpx;
  border-left: 6rpx solid #667EEA;
}

.tips-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.tips-item:last-child {
  margin-bottom: 0;
}

.tips-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: #FFFFFF;
  border-radius: 50%;
  font-size: 18rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.tips-text {
  font-size: 24rpx;
  color: #666666;
}
