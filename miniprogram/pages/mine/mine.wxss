.container {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 40rpx;
}

/* 用户头部 */
.user-header {
  background: linear-gradient(180deg, #667EEA 0%, #764BA2 100%);
  padding: 40rpx 30rpx 60rpx;
  position: relative;
}

.user-header::before {
  content: '';
  position: absolute;
  bottom: -100rpx;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #F5F7FA;
  border-radius: 50rpx 50rpx 0 0;
}

.user-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-left {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 20rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.user-right {
  display: flex;
  align-items: center;
}

.points-box {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  backdrop-filter: blur(10rpx);
}

.points-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 6rpx;
}

.points-value {
  font-size: 40rpx;
  color: #FFFFFF;
  font-weight: bold;
}

.stats-row {
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 24rpx 0;
  backdrop-filter: blur(10rpx);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 30rpx;
  flex: 1;
}

.stat-item::after {
  content: '';
  width: 1rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.3);
  position: absolute;
  right: 0;
}

.stat-item:last-child::after {
  display: none;
}

.stat-value {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 充值区域 */
.recharge-section {
  background: #FFFFFF;
  margin: -30rpx 30rpx 24rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  position: relative;
  z-index: 10;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.section-tips {
  font-size: 22rpx;
  color: #FF6B6B;
}

.recharge-scroll {
  width: 100%;
}

.recharge-list {
  display: flex;
  padding-right: 10rpx;
}

.recharge-item {
  flex-shrink: 0;
  width: 200rpx;
  height: 160rpx;
  background: #F8F9FA;
  border: 2rpx solid #E8E8E8;
  border-radius: 16rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s ease;
}

.recharge-item.active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-color: #667EEA;
}

.recharge-item.recommend::after {
  content: '超值';
  position: absolute;
  top: 0;
  right: 0;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #FFFFFF;
  font-size: 18rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx 0 12rpx 0;
}

.recharge-tag {
  position: absolute;
  top: 0;
  left: 0;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #FFFFFF;
  font-size: 18rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx 0 12rpx 0;
}

.recharge-points {
  font-size: 40rpx;
  color: #667EEA;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.points-unit {
  font-size: 24rpx;
  font-weight: normal;
}

.recharge-price {
  font-size: 32rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.recharge-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 24rpx;
  border: none;
}

.recharge-btn::after {
  border: none;
}

.recharge-btn[disabled] {
  background: #E0E0E0;
  color: #999999;
}

/* 菜单区域 */
.menu-section {
  margin: 0 30rpx;
}

.menu-group {
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.menu-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
}

.menu-title {
  font-size: 30rpx;
  color: #1A1A1A;
  font-weight: 500;
}

.menu-right {
  display: flex;
  align-items: center;
}

.menu-desc {
  font-size: 24rpx;
  color: #999999;
  margin-right: 12rpx;
}

.menu-reward {
  font-size: 24rpx;
  color: #FF6B6B;
  background: rgba(255, 107, 107, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

.menu-arrow {
  width: 24rpx;
  height: 24rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx 0;
}

.version-text {
  font-size: 22rpx;
  color: #CCCCCC;
}
