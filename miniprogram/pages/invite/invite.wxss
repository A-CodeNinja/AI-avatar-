.container {
  min-height: 100vh;
  background: #F5F7FA;
}

.header {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.header-content {
  position: relative;
  z-index: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.9) 0%, rgba(118, 75, 162, 0.9) 100%);
}

.header-title {
  font-size: 48rpx;
  color: #FFFFFF;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 40rpx;
}

.invite-stats {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 30rpx 60rpx;
  backdrop-filter: blur(10rpx);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  color: #FFFFFF;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 60rpx;
}

.content-section {
  padding: 0 30rpx 40rpx;
  margin-top: -40rpx;
  position: relative;
  z-index: 10;
}

.reward-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.reward-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 24rpx;
}

.reward-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.reward-list {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.reward-item {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
}

.reward-item.highlight {
  background: linear-gradient(135deg, rgba(255, 167, 81, 0.1) 0%, rgba(255, 226, 89, 0.1) 100%);
  border: 2rpx solid #FFA751;
}

.reward-left {
  display: flex;
  align-items: center;
}

.reward-step {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.reward-item.highlight .reward-step {
  background: linear-gradient(135deg, #FFA751 0%, #FFE259 100%);
}

.reward-text {
  font-size: 28rpx;
  color: #333333;
}

.reward-points {
  font-size: 32rpx;
  font-weight: bold;
  color: #FFA751;
}

.reward-arrow {
  font-size: 32rpx;
  color: #CCCCCC;
  margin: 8rpx 0;
}

.share-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.share-btn {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F8F9FA;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #333333;
  border: none;
  margin-bottom: 16rpx;
}

.share-btn.main {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: #FFFFFF;
}

.share-btn:last-child {
  margin-bottom: 0;
}

.share-btn::after {
  border: none;
}

.share-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.share-btn.main .share-icon {
  filter: brightness(0) invert(1);
}

.invite-list {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.section-count {
  font-size: 24rpx;
  color: #999999;
}

.list-content {
  display: flex;
  flex-direction: column;
}

.invite-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.invite-item:last-child {
  border-bottom: none;
}

.invite-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.invite-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.invite-name {
  font-size: 28rpx;
  color: #1A1A1A;
  margin-bottom: 6rpx;
}

.invite-time {
  font-size: 22rpx;
  color: #999999;
}

.invite-points {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: 500;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 26rpx;
  color: #999999;
}
