.container {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 40rpx;
}

/* 头部积分卡片 */
.points-header {
  padding: 20rpx 30rpx;
}

.points-card {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

.points-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);
  border-radius: 50%;
}

.points-main {
  display: flex;
  flex-direction: column;
  margin-bottom: 16rpx;
}

.points-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 12rpx;
}

.points-value {
  font-size: 72rpx;
  font-weight: bold;
  color: #FFFFFF;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.points-tips {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 签到区域 */
.sign-section {
  background: #FFFFFF;
  margin: 0 30rpx 24rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.section-tips {
  font-size: 22rpx;
  color: #999999;
}

.calendar-box {
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
}

.calendar-week {
  display: flex;
  justify-content: space-around;
  margin-bottom: 16rpx;
}

.week-item {
  font-size: 24rpx;
  color: #999999;
  width: 80rpx;
  text-align: center;
}

.calendar-days {
  display: flex;
  justify-content: space-around;
}

.day-item {
  position: relative;
  width: 80rpx;
  height: 100rpx;
  border-radius: 12rpx;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #E8E8E8;
}

.day-item.signed {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  border-color: #667EEA;
}

.day-item.today {
  border-color: #667EEA;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.day-label {
  font-size: 22rpx;
  color: #666666;
  margin-bottom: 6rpx;
}

.day-item.signed .day-label {
  color: #FFFFFF;
}

.day-points {
  font-size: 20rpx;
  color: #667EEA;
}

.day-item.signed .day-points {
  color: rgba(255, 255, 255, 0.9);
}

.day-icon {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 24rpx;
  height: 24rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  color: #FFFFFF;
}

.sign-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.sign-btn::after {
  border: none;
}

.sign-btn[disabled] {
  background: linear-gradient(135deg, #E0E0E0 0%, #D0D0D0 100%);
  color: #999999;
}

/* 任务区域 */
.tasks-section, .fun-section {
  background: #FFFFFF;
  margin: 0 30rpx 24rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.task-list {
  margin-top: 16rpx;
}

.task-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.task-item:last-child {
  margin-bottom: 0;
}

.task-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.task-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
}

.task-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.task-name {
  font-size: 28rpx;
  color: #1A1A1A;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.task-desc {
  font-size: 22rpx;
  color: #999999;
}

.task-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.task-reward {
  font-size: 28rpx;
  color: #667EEA;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.task-count, .task-forever {
  font-size: 20rpx;
  color: #999999;
}

.task-forever {
  background: linear-gradient(135deg, #FFA751 0%, #FFE259 100%);
  color: #FFFFFF;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 好玩功能 */
.fun-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-top: 16rpx;
}

.fun-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
}

.fun-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #FFA751 0%, #FFE259 100%);
  margin-bottom: 12rpx;
}

.fun-name {
  font-size: 22rpx;
  color: #666666;
}

/* 积分记录 */
.log-section {
  background: #FFFFFF;
  margin: 0 30rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.log-list {
  margin-top: 16rpx;
}

.log-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.log-item:last-child {
  border-bottom: none;
}

.log-left {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.log-desc {
  font-size: 28rpx;
  color: #1A1A1A;
  margin-bottom: 6rpx;
}

.log-time {
  font-size: 22rpx;
  color: #999999;
}

.log-change {
  font-size: 32rpx;
  font-weight: bold;
}

.log-change.positive {
  color: #4CAF50;
}

.log-change.negative {
  color: #FF5722;
}
