.container {
  min-height: 100vh;
  background: #F5F7FA;
}

/* 分类标签 */
.tabs-wrapper {
  background: #FFFFFF;
  padding: 20rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.tabs-scroll {
  width: 100%;
}

.tabs-list {
  display: flex;
  padding: 0 20rpx;
  white-space: nowrap;
}

.tab-item {
  padding: 16rpx 28rpx;
  margin-right: 16rpx;
  background: #F8F9FA;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666666;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: #FFFFFF;
  font-weight: 500;
}

/* 类型切换 */
.type-tabs {
  display: flex;
  background: #FFFFFF;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.type-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 16rpx;
  background: #F8F9FA;
  margin-right: 20rpx;
  transition: all 0.3s ease;
}

.type-item:last-child {
  margin-right: 0;
}

.type-item.active {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
}

.type-icon {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 12rpx;
}

.type-text {
  font-size: 24rpx;
  color: #666666;
}

.type-item.active .type-text {
  color: #FFFFFF;
  font-weight: 500;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  margin: 20rpx 30rpx;
  padding: 20rpx 30rpx;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

/* 内容区域 */
.content-section {
  padding: 0 20rpx 40rpx;
}

/* 头像框网格 */
.material-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.material-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.material-item::active {
  transform: scale(0.98);
}

.material-wrapper {
  position: relative;
  width: 100%;
  padding-top: 100%;
  background: #F8F9FA;
}

.material-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.material-tag {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #FFFFFF;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.material-name {
  display: block;
  padding: 16rpx 20rpx 8rpx;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.material-category {
  display: block;
  padding: 0 20rpx 16rpx;
  font-size: 22rpx;
  color: #999999;
}

/* 贴纸网格 */
.sticker-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.sticker-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.sticker-item::active {
  transform: scale(0.98);
}

.sticker-wrapper {
  width: 100%;
  padding-top: 100%;
  position: relative;
  margin-bottom: 12rpx;
}

.sticker-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.sticker-name {
  font-size: 22rpx;
  color: #666666;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}
