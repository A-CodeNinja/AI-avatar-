.container {
  padding: 0;
}

.tabs {
  display: flex;
  background-color: white;
  border-bottom: 1rpx solid #E5E5E5;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666666;
  position: relative;
}

.tab-item.active {
  color: #6C63FF;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(135deg, #6C63FF 0%, #8B7FFF 100%);
  border-radius: 2rpx;
}

.content-section {
  padding: 30rpx;
}

.material-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.material-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.material-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
}

.material-name {
  font-size: 22rpx;
  color: #666666;
  text-align: center;
}

.emoji-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 20rpx;
}

.emoji-item {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.emoji-text {
  font-size: 60rpx;
}
