.container {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 40rpx;
}

.header {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  padding: 60rpx 30rpx 40rpx;
}

.header-title {
  display: block;
  font-size: 44rpx;
  color: #FFFFFF;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.header-subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.tools-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

.tool-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.tool-item::active {
  transform: scale(0.98);
}

.tool-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.tool-icon {
  width: 50rpx;
  height: 50rpx;
}

.tool-name {
  font-size: 28rpx;
  color: #1A1A1A;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.tool-desc {
  font-size: 22rpx;
  color: #999999;
  text-align: center;
}

.tips-section {
  text-align: center;
  padding: 60rpx 0;
}

.tips-text {
  font-size: 24rpx;
  color: #CCCCCC;
}
