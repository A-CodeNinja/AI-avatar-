page {
  background-color: #F8F9FA;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 20rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #6C63FF 0%, #8B7FFF 100%);
  color: white;
  border-radius: 50rpx;
  border: none;
}

.btn-secondary {
  background-color: #FFFFFF;
  color: #6C63FF;
  border: 2rpx solid #6C63FF;
  border-radius: 50rpx;
}

.card {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.text-primary {
  color: #6C63FF;
}

.text-secondary {
  color: #999999;
}

.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
